
public class Battleship {
	
	private static void printGrid(int line) {
		String textLine = "";
		switch(line) {
			case 1:				
				textLine += "╔";
				for(int i = 0; i < 10; i++) {
					textLine += " ╦";
				}
				textLine += " ╗";
				System.out.println(textLine);
				break;
			case 2:
				textLine += "║";
				for(int i = 0; i < 10; i++) {
					textLine += " ╬";
				}
				textLine += " ║";
				System.out.println(textLine);
				break;
			case 3:
				textLine += "╚";
				for(int i = 0; i < 10; i++) {
					textLine += " ╩";
				}
				textLine += " ╝";
				System.out.println(textLine);
		}
		System.out.println();
		
	}

	public static void main(String[] args) {
		UserGrid User = new UserGrid();
		PCGrid PC = new PCGrid();
		
		do {  //Game Loop
			printGrid(1);
			for (int i = 0; i < 8; i++) {
				printGrid(2);
			}
			printGrid(3);
		} while (false);

	}

}
