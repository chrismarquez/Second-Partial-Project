
public class Battleship {
	
	private static void printGrid(int line) {
		switch(line) {
			case 1:
				String textLine = "";
				textLine += "╔";
				for(int i = 0; i < 10; i++) {
					textLine += " ╦";
				}
				textLine += " ╗";
				System.out.println(textLine);
				break;
		}
		String textLine = "";
		textLine += "╔";
		for(int i = 0; i < 10; i++) {
			textLine += " ╦";
		}
		textLine += " ╗";
		System.out.println(textLine);
	}

	public static void main(String[] args) {
		UserGrid User = new UserGrid();
		PCGrid PC = new PCGrid();
		
		do {  //Game Loop
			printGrid(1);
		} while (false);

	}

}
