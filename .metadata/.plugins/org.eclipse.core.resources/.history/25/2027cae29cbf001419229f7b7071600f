
public class Battleship {
	
	public static void printGridLine(int line) {
		String textLine = " ";
		switch(line) {
			case 1:				
				textLine += "╔";
				for(int i = 0; i < 9; i++) {
					textLine += " ╦";
				}
				textLine += " ╗";
				System.out.println(textLine);
				break;
			case 2:
				textLine += "║";
				for(int i = 0; i < 9; i++) {
					textLine += " ╬";
				}
				textLine += " ║";
				System.out.println(textLine);
				break;
			case 3:
				textLine += "╚";
				for(int i = 0; i < 9; i++) {
					textLine += " ╩";
				}
				textLine += " ╝";
				System.out.println(textLine);
		}
	}
	
	public static void printGrid(Grid grid) {
		printGridLine(1);
		printSymbols(1,1,0,10,grid);
		for (int i = 0; i < 8; i++) {
			printGridLine(2);
		}
		printSymbols(2,9,0,10,grid);
		printGridLine(3);
		printSymbols(9,10,0,10,grid);
	}
	
	public static void printSymbols(int x1,int x2, int y1, int y2,Grid grid) {
		String field = " ";
		for (int i = x1;i < x2 + 1; i++)
			for (int j = y1; j < y2 + 1; j++) {
				field += " " + grid.getGrid()[i][j].getSymbol();
			}
		System.out.println(field);
	}

	public static void main(String[] args) {
		UserGrid User = new UserGrid();
		PCGrid PC = new PCGrid();
		
		do {  //Game Loop
			printGrid(User);
		} while (false);

	}

}
