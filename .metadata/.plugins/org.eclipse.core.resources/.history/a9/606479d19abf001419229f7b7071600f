
public class Battleship {
	
	public static void printGridLine(int line) {
		String textLine = "";
		switch(line) {
			case 1:				
				textLine += "╔";
				for(int i = 0; i < 10; i++) {
					textLine += " ╦";
				}
				textLine += " ╗";
				System.out.println(textLine);
				break;
			case 2:
				textLine += "║";
				for(int i = 0; i < 10; i++) {
					textLine += " ╬";
				}
				textLine += " ║";
				System.out.println(textLine);
				break;
			case 3:
				textLine += "╚";
				for(int i = 0; i < 10; i++) {
					textLine += " ╩";
				}
				textLine += " ╝";
				System.out.println(textLine);
		}
	}
	
	public static void printGrid(Grid grid) {
		String field = " ";
		printGridLine(1);
		for (int i = 0; i < 9; i++) {
			field += grid.getGrid()[0][i] + "";
		}
		System.out.println(field);
		for (int i = 0; i < 8; i++) {
			printGridLine(2);
		}
		printGridLine(3);
	}

	public static void main(String[] args) {
		UserGrid User = new UserGrid();
		PCGrid PC = new PCGrid();
		
		do {  //Game Loop
			printGrid(User);
		} while (false);

	}

}
