
public class Battleship {

	public static void main(String[] args) {
		UserGrid User = new UserGrid();
		PCGrid PC = new PCGrid();
		
		do {  //Game Loop
			String textLine = "";
			textLine += "╔";
			for(int i = 0; i < 10; i++) {
				textLine += " ╦";
			}
			textLine += " ╗";
			System.out.println(textLine);
		} while (true);

	}

}
